<Window x:Class="WaveshaperUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveshaperUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800" Closed="Window_Closed">
    <Window.Resources>
        <!-- TODO: Find out how to add color pallet here -->
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="CommandAdd_Executed" CanExecute="CommandAdd_CanExecute"/>
    </Window.CommandBindings>
    <Grid>
        <!--<Button RenderTransformOrigin="0.482,0.514" Height="80" Width="180" Content="Run Tests" FontSize="30" Click="Button_Click"/>-->
        <local:Selector VerticalAlignment="Bottom"></local:Selector>
        <local:FileBar x:Name="File_Bar" VerticalAlignment="Top" HorizontalAlignment="Right"></local:FileBar>
        <Button Name="Select" Height="60" Content="Select File" Width="90" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5" Click="Select_Click"></Button>
        <local:OversamplingControler x:Name="OvspControler" Background="#595959" Width="130" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,0,0,0"></local:OversamplingControler>
        <Button x:Name="Save" Height="60" Content="Save File" Width="90" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,5,0,0" Click="Save_Click"/>
    </Grid>
</Window>
