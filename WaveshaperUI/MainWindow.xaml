<Window x:Class="WaveshaperUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveshaperUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="760" Closed="Window_Closed">
    <Window.Resources>
        <ResourceDictionary Source="/ColorPallete.xaml"></ResourceDictionary>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="CommandAdd_Executed" CanExecute="CommandAdd_CanExecute"/>
    </Window.CommandBindings>
    <Grid Background="{StaticResource Background}">
        <!--<Button RenderTransformOrigin="0.482,0.514" Height="80" Width="180" Content="Run Tests" FontSize="30" Click="Button_Click"/>-->
        <local:Selector VerticalAlignment="Bottom" Background="{StaticResource Background}"></local:Selector>
        <local:FileBar x:Name="File_Bar" VerticalAlignment="Top" HorizontalAlignment="Right" BorderThickness="1,0,0,0" BorderBrush="White"></local:FileBar>
        <local:OversamplingControler x:Name="OvspControler" Background="{StaticResource Background}" Width="130" Height="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,0,0,0"></local:OversamplingControler>
        <Button Name="Select" Height="50" Content="Select File" Width="90" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5" Click="Select_Click"></Button>
        <Button x:Name="Save" Height="50" Content="Save File" Width="90" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="103,5,0,0" Click="Save_Click"/>
    </Grid>
</Window>
