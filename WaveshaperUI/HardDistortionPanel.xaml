<local:EffectPanel x:Class="WaveshaperUI.HardDistortionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaveshaperUI"
             xmlns:oxy="http://oxyplot.org/wpf" 
             xmlns:oxy1="clr-namespace:OxyPlot.Axes;assembly=OxyPlot"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="700">
    <local:EffectPanel.Resources>
        <local:SliderPercentConverter x:Key="SliderPercentConverter" />
    </local:EffectPanel.Resources>
    <Grid>
        <oxy:PlotView Name="MyPlotView" Model="{Binding DisplayModel}" Height="300" Width="300" HorizontalAlignment="Left" Margin="25,25"></oxy:PlotView>
        <Grid Height="120" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Slider Name="LimitSlider" Width="320" VerticalAlignment="Top" Height="50" HorizontalAlignment="Right" Margin="25,25" ValueChanged="LimitSlider_ValueChanged"></Slider>
            <TextBox Name="LimitDisplay" Height="25" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,53,30,0" Text="{Binding Path=Value, ElementName=LimitSlider, UpdateSourceTrigger=LostFocus, Converter={StaticResource SliderPercentConverter}}"></TextBox>
            <Label Name="LimitLabel" HorizontalAlignment="Right" Content="Limit" Foreground="White" VerticalAlignment="Top" Margin="0,50,80,0"></Label>
            <Button Name="SymmetryButton" Height="25" Content="Asymmetric / Even" Width="120" VerticalAlignment="Bottom" Click="SymetryButton_Click"></Button>
        </Grid>
        <Grid Name="LowerControls" Height="120" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,130,0,0" Visibility="Hidden">
            <Slider Name="LowerLimitSlider" Width="320" VerticalAlignment="Top" Height="50" HorizontalAlignment="Right" Margin="25,25" ValueChanged="LowerLimitSlider_ValueChanged"></Slider>
            <TextBox Name="LowerLimitDisplay" Height="25" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,53,30,0" Text="{Binding Path=Value, ElementName=LowerLimitSlider, UpdateSourceTrigger=LostFocus, Converter={StaticResource SliderPercentConverter}}"></TextBox>
            <Label HorizontalAlignment="Right" Content="Lower Limit" Foreground="White" VerticalAlignment="Top" Margin="0,50,80,0"></Label>
        </Grid>
        <CheckBox Name="GainBox" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,25" Checked="GainBox_Checked" Unchecked="GainBox_Unchecked"></CheckBox>
        <Label HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Make-up Gain" Foreground="White" Margin="0,0,45,20"></Label>
    </Grid>
</local:EffectPanel>
